
@using AirplaneApp.ViewModel

@model HomeVM
<ul style="margin: 0 auto; display: block; width: max-content; padding-bottom: 40px; ">
    <span style="color:red; font-size:23px;">Cotegories:</span>
    @foreach (var items in Model.coteg)
        {
            <li style=" display:inline-block; list-style-type:none; text-align:center; margin-left:20px;">
               <span style="color:black; font-size:20px;"> @items.Id</span>.
               <span style="color: blue; font-size: 20px;">@items.Name</span>
            </li>
        }
</ul>

<ul style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap;">
    @foreach (var planes in Model.air)
        {
            <li style="display:inline-block; width:350px; height:350px; text-align:center; margin-top:15px; border: 1px solid black; margin-left:10px; padding:10px; border-radius:10px;">
                <img  height="210" src="@planes.Photo" style="width:100%; object-fit:contain; border-radius:10px;" /> <br />
                <span style="color:blue;">Model:</span> @planes.Model <br />
                @planes.Discription
            </li>
        }
</ul>

